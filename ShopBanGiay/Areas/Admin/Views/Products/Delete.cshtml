@model ShopBanGiay.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<form action="/Admin/Products/Delete/@Model.Id" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <table class="table">
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Price</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Image</th>
            <td><img src="~/Images/@Model.Image" style="width: 100px; height:100px"/></td>
        </tr>
        <tr>
            <th>BrandName</th>
            <td>@Model.Brand.BrandName</td>
        </tr>
    </table>

    <button type="submit" class="btn btn-success">Delete</button>
    <a href="/admin/Products/index" class="btn btn-dark">Cancel</a>
</form>
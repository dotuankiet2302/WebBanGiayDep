@model ShopBanGiay.Models.Product

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="/Admin/Products/Edit/@Model.Id" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div class="col-md-6">
            <label for="Name">Name</label>
            <input type="text"
                   class="form-control"
                   id="Name"
                   name="Name"
                   placeholder="Name"
                   value="@Model.Name" />
        </div>
        <div class="col-md-6">
            <label for="Price">Price</label>
            <input type="text"
                   class="form-control"
                   id="Price"
                   name="Price"
                   placeholder="Price"
                   value="@Model.Price" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="Description">Description</label>
            <input type="text"
                   class="form-control"
                   id="Description"
                   name="Description"
                   placeholder="Description"
                   value="@Model.Description" />
        </div>
        <div class="col-md-6">
            <label for="Image">Image</label>
            <input type="text"
                   class="form-control"
                   id="Image"
                   name="Image"
                   placeholder="Image"
                   value="@Model.Image" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(model => model.BrandId, "Thương hiệu")
            @Html.DropDownListFor(model => model.BrandId, new List<SelectListItem>()
               {
                    new SelectListItem() {Text = "GAFA", Value="1"},
                    new SelectListItem() {Text = "Nike", Value="2"},
                    new SelectListItem() {Text = "Biti's", Value="3"},
                    new SelectListItem() {Text = "MaisonOnline", Value="4"},
                    new SelectListItem() {Text = "Sketchers Party Mate", Value="5"},
                    new SelectListItem() {Text = "Adidas", Value="6"},
                    new SelectListItem() {Text = "Massimo Dutti", Value="7"},

               }, "Chọn thương hiệu", new { @class = "form-control" })
        </div>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a href="/admin/Products" class="btn btn-danger">Cancel</a>
</form>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color:beige; font-size:large;">
            <div class="container-fluid">
                <a class="navbar-brand" href="/admin/Home/Index" style="color:red; font-size:35px; margin-left:50px;">Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent" style="margin-left:80px;">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/admin/Products/Index">HÀNG MỚI</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                GIÀY NỮ
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color: beige">
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Giày+cao+gót">Giày cao gót</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Giày+thể+thao+nữ">Giày thể thao</a></li>

                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Oxford">Oxford</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Boot+nữ">Boot nữ</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Dép+nữ">Dép nữ</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                GIÀY NAM
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color: beige">
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Giày+thể+thao+nam">Giày thể thao nam</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Sandal+nam">Sandal nam</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Dép+nam">Dép nam</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Giày+tây">Giày tây</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Boot+nam">Boot nam</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                PHỤ KIỆN
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="background-color: beige">
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Vớ">Vớ</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Chai+vệ+sinh">Chai vệ sinh giày</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Dây">Dây giày</a></li>
                                <li><a class="dropdown-item" href="/admin/Products/Index?search=Đế">Đế lót</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex" action="/admin/Products/Index">
                        <input class="form-control me-3" type="search" name="search" id="search" placeholder="Search" aria-label="Search" value="@ViewBag.Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    <h3 style="margin-right:60px; margin-top: 5px; margin-left: 80px;">
                        @if (userName != null)
                        {
                            <div class="dropdown">
                                <a class="dropdown-toggle" style="background-color:beige;" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    @userName.Value
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="background-color:beige;">
                                    <li><a class="dropdown-item" href="/User/Logout">Logout</a></li>
                                </ul>
                            </div>
                        }
                        @*else
                        {
                            <div class="dropdown">
                                <a class="ropdown-toggle" style="background-color:beige;" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                                    </svg>
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="background-color:beige;">
                                    <li><a class="dropdown-item" href="/User/Login">Login</a></li>
                                    <li><a class="dropdown-item" href="/User/Register">Register</a></li>
                                </ul>
                            </div>
                        }*@
                    </h3>
                </div>

            </div>
        </nav>
        @*<ul class="sharecs-pc-net-bar">
                <li class="facebook">
                    <a href="https://www.messenger.com/t/100050530712025/" target="_blank" rel="nofollow" />
                </li>
            </ul>*@
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
